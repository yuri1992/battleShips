<?xml version="1.0"?>
<BattleShipGame xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="BattleShipGame.xsd">
    <GameType>ADVANCE</GameType>
    <boardSize>15</boardSize>
    <shipTypes>
        <shipType id="shipTypeA">
            <category>L_SHAPE</category>
            <amount>2</amount>
            <length>3</length>
            <score>10</score>
        </shipType>
        <shipType id="shipTypeB">
            <category>L_SHAPE</category>
            <amount>2</amount>
            <length>4</length>
            <score>5</score>
        </shipType>
    </shipTypes>
    <mine>
        <amount>5</amount>
    </mine>
    <boards>
        <board>
            <ship>
                <shipTypeId>shipTypeA</shipTypeId>
                <position x="1" y="1" />
                <direction>UP_RIGHT</direction>
            </ship>
            <ship>
                <shipTypeId>shipTypeA</shipTypeId>
                <position x="15" y="15" />
                <direction>RIGHT_UP</direction>
            </ship>
            <ship>
                <shipTypeId>shipTypeB</shipTypeId>
                <position x="13" y="2" />
                <direction>DOWN_RIGHT</direction>
            </ship>
            <ship>
                <shipTypeId>shipTypeB</shipTypeId>
                <position x="4" y="9" />
                <direction>RIGHT_DOWN</direction>
            </ship>
        </board>
        <board>
          <ship>
              <shipTypeId>shipTypeA</shipTypeId>
              <position x="2" y="2" />
              <direction>UP_RIGHT</direction>
          </ship>
          <ship>
              <shipTypeId>shipTypeA</shipTypeId>
              <position x="14" y="15" />
              <direction>RIGHT_UP</direction>
          </ship>
          <ship>
              <shipTypeId>shipTypeB</shipTypeId>
              <position x="13" y="2" />
              <direction>DOWN_RIGHT</direction>
          </ship>
          <ship>
              <shipTypeId>shipTypeB</shipTypeId>
              <position x="4" y="11" />
              <direction>RIGHT_DOWN</direction>
          </ship>
        </board>
    </boards>
</BattleShipGame>
